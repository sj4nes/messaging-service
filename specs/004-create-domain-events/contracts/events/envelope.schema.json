{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/event-envelope.schema.json",
  "title": "EventEnvelope",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "event_name",
    "event_id",
    "aggregate_type",
    "aggregate_id",
    "occurred_at",
    "actor",
    "version"
  ],
  "properties": {
    "event_name": { "type": "string", "minLength": 1 },
    "event_id": { "type": "string", "minLength": 8 },
    "aggregate_type": { "type": "string", "enum": [
      "Customer", "Contact", "Provider", "Channel", "Conversation"
    ] },
    "aggregate_id": { "type": "string", "minLength": 1 },
    "occurred_at": { "type": "string", "format": "date-time" },
    "actor": { "type": "string", "minLength": 1 },
    "version": { "type": "integer", "minimum": 1 },
    "idempotency_key": { "type": "string", "minLength": 4 }
  }
}
